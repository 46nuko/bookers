<h1>Editing Book</h1>
<div class="error-messages2">
  <% if @book.errors.any? %>
    <div class="error-box2">
      <p class="error-title2"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
      <% @book.errors.full_messages.each do |message| %>
        <p class="error-message2"><%= message %></p>
      <% end %>
    </div>
  <% end %>
</div>
<%= form_with model: @book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>